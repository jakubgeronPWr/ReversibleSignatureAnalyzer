<Window x:Class="ReversibleSignatureAnalyzer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReversibleSignatureAnalyzer"
        mc:Ignorable="d"
        Title="ReversibleSignatureAnalyzer
        " Height="720" Width="1280" Background="Black" Margin="0,0,0,0" VerticalContentAlignment="Center" Padding="15,13,15,15" HorizontalContentAlignment="Center" Grid.IsSharedSizeScope="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <ComboBox Height="45" Margin="15,50,15,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold">
            <ComboBoxItem>
                <TextBlock>Add Watermark</TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <TextBlock>Analyze Image</TextBlock>
            </ComboBoxItem>
        </ComboBox>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,15,0,0">
            <Button x:Name="btn_import_file" Content="Import" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="18" Background="#FF959595" Foreground="White" Click="btn_import_file_Click" Height="40" Width="90"/>
            <TextBox x:Name="tv_import_file_path" Margin="5,0,12,0" Text="import file path" TextWrapping="Wrap" VerticalAlignment="Stretch" IsEnabled="False" Width="300"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,30">
            <Button x:Name="btn_export_file" Content="Export" HorizontalAlignment="Center" Margin="15,0,0,0" VerticalAlignment="Stretch" FontWeight="Bold" FontSize="18" Background="#FF959595" Foreground="White" Height="40" Width="90"/>
            <TextBox x:Name="tv_export_file_path" HorizontalAlignment="Stretch" Margin="5,0,30,0" Text="export file path" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="300"/>
        </StackPanel>

        <Image Grid.Column="1" HorizontalAlignment="Stretch" Margin="15,15,15,15" Grid.Row="0" VerticalAlignment="Stretch"/>
        <Image Grid.Column="1" HorizontalAlignment="Stretch" Margin="15,15,15,15" Grid.Row="1"/>

        <GroupBox Header="Algorythm" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Foreground="White" Margin="15,0,0,15" >
            <StackPanel>
                <RadioButton GroupName ="algorithm_type" x:Name="rb_algorythm1" Content="Difference expansion" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
                <RadioButton GroupName ="algorithm_type" x:Name="rb_algorythm2" Content="Alg2" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
                <RadioButton GroupName ="algorithm_type" x:Name="rb_algorythm3" Content="Alg3" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
                <RadioButton GroupName ="algorithm_type" x:Name="rb_algorythm4" Content="Alg4" HorizontalAlignment="Left" Margin="15,15,0,15" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
            </StackPanel>
        </GroupBox>



        <Button x:Name="Btn_Run" Content="RUN" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Height="40" Background="#FF6A6464" Panel.ZIndex="-4" FontSize="18" FontWeight="Bold" Foreground="White" Margin="15,80,15,0" Click="Btn_AnalyzeSignature_Click" />
        <RichTextBox Height="128" Margin="15,125,15,80" Grid.Row="1" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <DatePicker HorizontalAlignment="Left" Margin="-190,508,0,0" Grid.Row="1" VerticalAlignment="Top"/>

    </Grid>
</Window>
