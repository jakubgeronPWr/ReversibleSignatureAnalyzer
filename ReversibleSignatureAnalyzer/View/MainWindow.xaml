<Window x:Class="ReversibleSignatureAnalyzer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReversibleSignatureAnalyzer"
        mc:Ignorable="d"
        Title="ReversibleSignatureAnalyzer
        " Height="720" Width="1280" Background="Black" Margin="0,0,0,0" VerticalContentAlignment="Center" Padding="15,13,15,15" HorizontalContentAlignment="Center" Grid.IsSharedSizeScope="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="CbActivityType" Height="45" Margin="15,50,15,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold">
            <ComboBoxItem  Name="TbAdd" Content="Add Watermark" />
            <ComboBoxItem Name="TbAnalyze" Content="Analyze Image"/>
        </ComboBox>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,15,0,0">
            <Button x:Name="BtnImportFile" Content="Import" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="18" Background="#FF959595" Foreground="White" Click="BtnImportFile_Click" Height="40" Width="90"/>
            <TextBox x:Name="TvImportFilePath" Margin="5,0,12,0" Text="import file path" TextWrapping="Wrap" VerticalAlignment="Stretch" IsEnabled="False" Width="300"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,30">
            <Button x:Name="BtnExportFile" Content="Export" HorizontalAlignment="Center" Margin="15,0,0,0" VerticalAlignment="Stretch" FontWeight="Bold" FontSize="18" Background="#FF959595" Foreground="White" Height="40" Width="90"/>
            <TextBox x:Name="tv_export_file_path" HorizontalAlignment="Stretch" Margin="5,0,30,0" Text="export file path" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="300"/>
        </StackPanel>

        <GroupBox Header="Algorythm" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Foreground="White" Margin="15,0,0,15" >
            <StackPanel>
                <RadioButton GroupName ="algorithm_type" x:Name="RbAlgorithm1" Content="Difference expansion" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
                <RadioButton GroupName ="algorithm_type" x:Name="RbAlgorithm2" Content="DwtDctSvd" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
                <RadioButton GroupName ="algorithm_type" x:Name="RbAlgorithm3" Content="Histogram Shifting" HorizontalAlignment="Left" Margin="15,15,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
                <RadioButton GroupName ="algorithm_type" x:Name="RbAlgorithm4" Content="Alg4" HorizontalAlignment="Left" Margin="15,15,0,15" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="16" Grid.ColumnSpan="2" Height="25"/>
            </StackPanel>
        </GroupBox>



        <Button x:Name="BtnRun" Content="RUN" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Height="40" Background="#FFA41515" Panel.ZIndex="-4" FontSize="18" FontWeight="Bold" Foreground="White" Margin="15,80,15,0" Click="BtnRun_Click" />
        <RichTextBox Height="128" Margin="15,125,15,80" Grid.Row="1" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Your message to hide..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <DatePicker HorizontalAlignment="Left" Margin="-190,508,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Image x:Name="ImgImport" Grid.Column="1" HorizontalAlignment="Stretch" Margin="15,15,15,15" Grid.Row="0" VerticalAlignment="Stretch"/>
        <Image x:Name="ImgExport" Grid.Column="1" HorizontalAlignment="Stretch" Margin="15,15,15,15" Grid.Row="1"/>
        <Border BorderThickness="2" BorderBrush="White" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Margin="15,15,15,15" VerticalAlignment="Stretch"/>
        <Border BorderThickness="2" BorderBrush="White" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="15,15,15,15" VerticalAlignment="Stretch"/>

    </Grid>
</Window>
